<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.idedyk.android.japaneselearnhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    
    <application
        android:icon="@drawable/japan"
        android:label="@string/app_name" android:name="JapaneseAndroidLearnHelperApplication">
        <activity android:name=".splash.Splash">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>            
        </activity>
        <activity
            android:name=".JapaneseAndroidLearnHelperMainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".test.WordTest" android:label="@string/word_test_view_label" android:noHistory="true"></activity>
        <activity android:name=".test.WordTestSummary" android:noHistory="true" android:label="@string/word_test_summary_view_label"></activity>
        <activity android:name=".test.WordTestGroup" android:noHistory="true" android:label="@string/word_test_group_view_label"></activity>
        <activity android:name=".dictionaryscreen.WordDictionary" android:label="@string/word_dictionary_view_label"></activity>
        <activity android:name=".dictionaryscreen.WordDictionaryDetails" android:label="@string/word_dictionary_details_label"></activity>
        <activity android:name=".kana.Kana" android:label="@string/word_kana_label"></activity>
        <activity android:name=".info.InfoActivity" android:label="@string/info_label"></activity>
    </application>

</manifest>