<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draw_layout" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical">
    <LinearLayout android:id="@+id/hwr_button_group"
        android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:visibility="visible" android:orientation="horizontal"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="4dip" android:layout_marginTop="4dip"
        android:layout_marginLeft="2dip" android:layout_marginRight="2dip">
        <Button android:id="@+id/recognize_button"
            android:layout_height="fill_parent" android:layout_width="0px"
            android:layout_weight="1" android:text="HKR!!!!!"
            android:background="@android:drawable/btn_default_small"
            android:textSize="12dp" />
        <Button android:id="@+id/ocr_button"
            android:layout_height="fill_parent" android:layout_width="0px"
            android:layout_weight="1" android:text="OCR!!!!!"
            android:background="@android:drawable/btn_default_small"
            android:textSize="12dp" />
        <Button android:id="@+id/remove_stroke_button"
            android:layout_height="fill_parent" android:layout_width="0px"
            android:layout_weight="1" android:text="Remove_stroke!!!!!"
            android:background="@android:drawable/btn_default_small"
            android:textSize="12dp" />
        <Button android:id="@+id/clear_canvas_button"
            android:layout_height="fill_parent" android:layout_width="0px"
            android:layout_weight="1" android:text="Clear!!!!!"
            android:background="@android:drawable/btn_default_small"
            android:textSize="12dp" />
        <CheckBox android:id="@+id/lookAheadCb"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:text="Look ahound !!!!!!" android:layout_gravity="center_vertical"
            android:textSize="12dp" android:checked="false"></CheckBox>
    </LinearLayout>
    <pl.idedyk.android.japaneselearnhelper.kanji.hkr.KanjiDrawView
        android:id="@+id/kanji_draw_view" android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
