<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/kanji_test_info_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="4dip"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/kanji_test_info_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/kanji_recognizer_lineaylayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/kanji_test_recognizer_check_button"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/kanji_test_recognizer_check" />

        <Button
            android:id="@+id/kanji_test_recognizer_undo_button"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/kanji_test_recognizer_undo" />

        <Button
            android:id="@+id/kanji_test_recognizer_clear_button"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/kanji_test_recognizer_clear" />
    </LinearLayout>

    <pl.idedyk.android.japaneselearnhelper.kanji.hkr.KanjiDrawView
        android:id="@+id/kanji_test_recognizer_draw_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="100" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/kanji_test_report_problem_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_problem" />

        <TextView
            android:id="@+id/kanji_test_problem_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/kanji_test_report_problem" />
    </LinearLayout>

</LinearLayout>